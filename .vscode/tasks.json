{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "build",
      "command": "make",
      "args": ["test", "DEBUG"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Executes 'make test' for building"
    },
    {
      "label": "Clear Terminal",
      "type": "shell",
      "command": "clear",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Build and Clear",
      "dependsOrder": "sequence",
      "dependsOn": ["build", "Clear Terminal"]
    }
  ]
}
